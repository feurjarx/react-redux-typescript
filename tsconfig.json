{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": false,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "declaration": true,
        "rootDir": "./src/",
        "experimentalDecorators": true
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
        "api",
        "node_modules",
        "server.js",
        "webpack.config.js"
    ]
}
